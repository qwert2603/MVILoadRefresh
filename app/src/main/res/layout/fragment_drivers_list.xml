<?xml version="1.0" encoding="utf-8"?>
<com.qwert2603.mvi_load_refresh.load_refresh.LRPanelImpl xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lr_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/sortByName_CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sortByName"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drivers_RecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.qwert2603.mvi_load_refresh.load_refresh.LRPanelImpl>